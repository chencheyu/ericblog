  <div class="outer">
    <ul class="list-inline">
      <li>
        &copy;
        <% if (theme.since && !isNaN(theme.since) && theme.since < date(new Date(), 'YYYY')) { %><%- theme.since%>-<% } %><%= date(new Date(), 'YYYY') %>
        <%= config.author || config.title %>
      </li>
	  <li>
	    <!-- copyright -->
		  <a href ="https://creativecommons.org/licenses/by-nc-sa/3.0/tw/legalcode" rel="external nofollow" target="_blank">
		    <img alt ="創用 CC 姓名標示-非商業性-禁止改作 3.0 台灣" style ="border-width:0;width:auto;height:3rem;" src ="/images/by-nc-sa.png"/>
